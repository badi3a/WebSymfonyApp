<form method="post" action="{{ path('student_delete', {'NSC': student.NSC}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ student.NSC) }}">
    <button class="btn">Delete</button>
</form>
